<h1>Обратный отсчет до CFA 1</h1>
<div id="countdown"></div>

<script>
    function updateCountdown() {
        const targetDate = new Date("February 21, 2025 00:00:00").getTime();
        const now = new Date().getTime();
        const distance = targetDate - now;

        // Вычисление дней, часов, минут и секунд
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Отображение обратного отсчета
        const countdownElement = document.getElementById("countdown");
        countdownElement.innerHTML = days + "д " + hours + "ч " + minutes + "м " + seconds + "с ";

        // Определение текущего месяца и изменение оттенка цвета
        const currentMonth = new Date().getMonth() + 1;
        countdownElement.className = `month-${currentMonth}`;

        // Если осталось меньше 10 дней, цвет меняется на красный
        if (days <= 10) {
            countdownElement.classList.add("last-days");
        }

        // Если время истекло
        if (distance < 0) {
            clearInterval(interval);
            countdownElement.innerHTML = "CFA 1 начался!";
            countdownElement.style.backgroundColor = "green";
        }
    }

    // Обновление каждую секунду
    const interval = setInterval(updateCountdown, 1000);
</script>

</body>
