            color: #333;
        }

        h1 {
            font-size: 2em;
            margin-top: 50px;
        }

        #countdown {
            font-size: 3em;
            padding: 20px;
            border-radius: 10px;
            margin: 50px auto;
            display: inline-block;
            background-color: grey;
            color: white;
        }

        /* Пример изменения оттенка по месяцам */
        .month-1 { background-color: #d3d3d3; }  /* Январь */
        .month-2 { background-color: #b0b0b0; }  /* Февраль */
        .month-3 { background-color: #a0a0a0; }  /* Март */
        .month-4 { background-color: #909090; }  /* Апрель */
        .month-5 { background-color: #808080; }  /* Май */
        .month-6 { background-color: #707070; }  /* Июнь */
        .month-7 { background-color: #606060; }  /* Июль */
        .month-8 { background-color: #505050; }  /* Август */
        .month-9 { background-color: #404040; }  /* Сентябрь */
        .month-10 { background-color: #303030; } /* Октябрь */
        .month-11 { background-color: #202020; } /* Ноябрь */
        .month-12 { background-color: #101010; } /* Декабрь */

        /* Красный цвет в последние дни */
        .last-days {
            background-color: red;
